<div class="container mx-auto mt-8">
  <h1 class="flex justify-center text-2xl font-bold mb-4">My Wishlist</h1>
<div class="min-h-screen">
  <% if @wishlist.wishlist_items.any? %>
    <div class="flex flex-wrap justify-center gap-6">
      <% @wishlist.wishlist_items.each do |item| %>
        <div class="max-w-xs bg-gray-200 shadow-lg rounded-lg overflow-hidden">
          <div class="p-4">
            <%= item.product.images.first.present? ? image_tag(item.product.images.first.variant(resize_to_limit: [250, 250]).processed, class: "rounded") : image_tag("https://via.placeholder.com/250", class: "rounded") %>
          </div>
          <div class="p-4">
            <h3 class="mt-2 font-bold text-gray-800 text-center"><%= item.product.name %></h3>
            <p class="text-gray-600 text-center"><%= item.product.description %></p>
            <p class="text-gray-700 text-center mt-2">$<%= item.product.price / 100.0 %></p>
            <div class="flex justify-center mt-4 space-x-2">
              <%= link_to 'View Details', product_path(item.product), class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
              <%= button_to 'Remove', remove_item_wishlist_path(item), method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="flex justify-center">Your wishlist is empty.</p>
  <% end %>
</div>
</div>
