<!DOCTYPE html>
<html>
<head>
  <title>Ecommerce</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body class="bg-gray-50" data-turbo="false">
<%= render 'shared/navbar' %>

<!-- Alerts Section -->
<div class="container mx-auto mt-4">
  <%= render 'shared/alerts' %>
</div>

<div class="mt-2">
  <!-- Welcome Section with Adjustable Margins -->
  <% if controller_name == 'home' && action_name == 'index' %>
    <div class="w-full flex justify-center mb-6">
      <div class="w-full max-w-8xl mx-4 text-black p-8 flex items-center transition-all duration-300 rounded-lg cursor-pointer justify-center" style="height: 85vh; background-image: url(<%= asset_path('bgh.jpg') %>); background-repeat: no-repeat; background-position: center;  background-size: cover">
        <div class="text-center p-5 rounded">
          <h1 class="text-5xl mt-5 font-bold">Welcome to Thrift Basket</h1>
          <p class="text-xl mb-8">Start shopping</p>
          <%= link_to "Browse Collection", products_path, class: "bg-white hover:bg-gray-600 text-black font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flex">
  <% if controller_name == 'products' && action_name == 'index' %>
    <div class="fixed top-44 left-12 h-auto w-64 bg-grey-200 p-6 shadow-lg z-20">
      <%= render 'shared/filter_sidebar' %>
    </div>

    <main class="container mx-auto mt-28 ml-72 <%= ['sessions', 'registrations', 'reviews'].include?(controller_name) ? 'max-w-3xl' : 'max-w-9xl' %> px-2 pt-2 sm:px-6 lg:px-8">
  <% else %>

    <main class="container mx-auto mt-28 <%= ['sessions', 'registrations', 'reviews'].include?(controller_name) ? 'max-w-3xl' : 'max-w-9xl' %> px-4 sm:px-6 lg:px-8">
  <% end %>
  <%= yield %>
  </main>
</div>

<%= render 'shared/footer' %>
<%= javascript_include_tag "alerts" %>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const cartCount = document.getElementById('cart-count');
        const wishlistCount = document.getElementById('wishlist-count');

        function updateCartCount() {
            fetch('/cart_data', {
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': document.querySelector("[name='csrf-token']").content
                }
            })
                .then(response => response.json())
                .then(data => {
                    console.log('Cart data:', data); // Log the response to check its structure
                    const cartCountValue = data.cart_items.reduce((total, item) => total + item.quantity, 0);
                    cartCount.innerText = cartCountValue;
                })
                .catch(error => console.error('Error:', error));
        }

        function updateWishlistCount() {
            fetch('/wishlist_data', {
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': document.querySelector("[name='csrf-token']").content
                }
            })
                .then(response => response.json())
                .then(data => {
                    console.log('Wishlist data:', data); // Log the response to check its structure
                    const wishlistCountValue = data.wishlist_items.length;
                    wishlistCount.innerText = wishlistCountValue;
                })
                .catch(error => console.error('Error:', error));
        }

        updateWishlistCount();
        updateCartCount(); // Call the function to update the cart count on page load
    });
</script>
</body>
</html>
