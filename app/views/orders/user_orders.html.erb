
<body class="bg-gray-100">
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full bg-white p-8 shadow-lg rounded-lg">
    <h1 class="text-3xl font-bold text-center mb-6">My Orders</h1>
    <% if @orders.any? %>
      <%= form_with url: reorder_items_path, method: :post, local: true do %>
        <div class="space-y-4">
          <% @orders.each do |order| %>
            <div class="border rounded-lg p-4 bg-gray-50 shadow-sm">
              <p><strong>Order ID:</strong> <%= order.id %></p>
              <p><strong>Total:</strong> $<%= (order.total / 100.0).round(2) %></p>
              <p><strong>Status:</strong> <%= order.status %></p>
              <p><strong>Address:</strong> <%= order.address %></p>
              <div class="mt-4">
                <strong>Products:</strong>
                <ul class="list-disc list-inside">
                  <% order.order_products.each do |order_product| %>
                    <li>
                      <label>
                        <%= check_box_tag "reorder_items[]", order_product.id %>
                        <%= order_product.product.name %> - Quantity: <%= order_product.quantity %>, Size: <%= order_product.size %>
                      </label>
                    </li>

                  <% end %>
                </ul>
                <div class="mt-6 text-center">
                  <%= submit_tag 'Reorder Selected Items', class: 'inline-block px-4 py-2 bg-blue-800 hover:bg-blue-900 text-white font-bold rounded-lg' %>
                </div>
              </div>
            </div>

          <% end %>

        </div>

      <% end %>
    <% else %>
      <p class="text-center text-gray-700">You have no orders yet.</p>
    <% end %>
  </div>
</div>
</body>

