<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="next">
  <%= link_to_unless current_page.last?, t('views.pagination.next').html_safe, url, rel: 'next', remote: remote ,class: 'px-3 py-1 mx-1 bg-gray-300 text-black-700 rounded hover:bg-gray-400'%>
</span>

<%# if next_page %>
  <%#= link_to t('views.pagination.next'), url, class: 'px-3 py-1 mx-1 bg-gray-300 text-gray-700 rounded hover:bg-gray-400' %>
<%# else %>
