
  <div class="container py-10mx-auto sm:px-6 py-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <% data = [
      { cover: 'fa-solid fa-truck-fast', title: 'Eco-friendly', desc: 'Helps us reduce waste and save the environment.' },
      { cover: 'fa-solid fa-id-card', title: 'Safe Payment', desc: 'Using trusted and secure payment platforms is crucial to protect personal and financial information when making online purchases.' },
      { cover: 'fa-solid fa-shield', title: 'Shop With Confidence', desc: 'We offer competitive prices on our 100 million plus product any range.' },
      { cover: 'fa-solid fa-headset', title: 'Affordable choices', desc: 'Prices so cheap, there\'s something for everyone.' }
    ] %>

    <% data.each do |val| %>
      <div class="product text-center p-4 bg-white rounded-lg shadow-lg">
        <div class="img icon-circle text-4xl text-gray-700 mb-4">
          <i class="<%= val[:cover] %>"></i>
        </div>
        <h3 class="text-xl font-semibold mb-2"><%= val[:title] %></h3>
        <p class="text-gray-600"><%= val[:desc] %></p>
      </div>
    <% end %>
  </div>
