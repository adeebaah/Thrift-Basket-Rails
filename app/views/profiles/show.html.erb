<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="max-w-md w-full space-y-8">
    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline"><%= flash[:notice] %></span>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline"><%= flash[:alert] %></span>
      </div>a
    <% end %>

    <div>
      <h1 class="text-3xl font-bold text-center mb-6">Profile Page</h1>
      <div class="space-y-4">
        <div class="flex justify-between text-gray-700">
          <strong class="font-semibold text-gray-800">Name:</strong>
          <span><%= @user.name %></span>
        </div>
        <div class="flex justify-between text-gray-700">
          <strong class="font-semibold text-gray-800">Email:</strong>
          <span><%= @user.email %></span>
        </div>
        <div class="flex justify-between text-gray-700">
          <strong class="font-semibold text-gray-800">Phone:</strong>
          <span><%= @user.phone %></span>
        </div>
        <div class="flex justify-between text-gray-700">
          <strong class="font-semibold text-gray-800">Age:</strong>
          <span><%= @age %></span>
        </div>
        <div class="flex justify-between text-gray-700">
          <strong class="font-semibold text-gray-800">Address:</strong>
          <span><%= @user.address %></span>
        </div>
        <div class="mt-6 text-center">
          <%= link_to 'Edit Profile', edit_profile_path, class: 'inline-block px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-lg' %>
        </div>

      </div>
    </div>
  </div>
</div>
